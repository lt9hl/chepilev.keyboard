<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GreyButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="marginHorizontal">20dp</item>
        <item name="android:textSize">45dp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/DimGray</item>
    </style>

    <style name="WhiteButtonStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/DimGray</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">45dp</item>
        <item name="fontFamily">serif</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/LightGrey</item>
    </style>

    <style name="whiteButtonRight">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">monospace</item>
        <item name="android:backgroundTint">@color/LightGrey</item>
        <item name="cornerRadius">7dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>